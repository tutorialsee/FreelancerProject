                android:gravity="center_vertical"
                android:text="Pricing"
                android:textColor="@color/addanyprojectsecond"
                android:textSize="15sp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/lin285"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/lin265"
            android:layout_marginTop="10dp"
            android:background="@android:color/transparent"
            android:orientation="horizontal"
            android:padding="8dp" >

            <TextView
                android:id="@+id/nkaamxsae"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="@dimen/layout_marginLeft"
                android:gravity="center_vertical"
                android:text="My Profile"
                android:textColor="@color/addanyprojectsecond"
                android:textSize="15sp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/lin28"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/lin285"
            android:layout_marginTop="10dp"
            android:background="@android:color/transparent"
            android:orientation="horizontal"
            android:padding="8dp" >

            <TextView
                android:id="@+id/nkaamjxsae"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="@dimen/layout_marginLeft"
                android:gravity="center_vertical"
                android:text="About US"
                android:textColor="@color/addanyprojectsecond"
                android:textSize="15sp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/lin29"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/lin28"
            android:layout_marginTop="10dp"
            android:background="@android:color/transparent"
            android:orientation="horizontal"
            android:padding="8dp" >

            <TextView
                android:id="@+id/nkaamxsade"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="@dimen/layout_marginLeft"
                android:gravity="center_vertical"
                android:text="Contact US"
                android:textColor="@color/addanyprojectsecond"
                android:textSize="15sp" />
        </LinearLayout>
        </LinearLayout>
        </ScrollView>
    </RelativeLayout>

</RelativeLayout>