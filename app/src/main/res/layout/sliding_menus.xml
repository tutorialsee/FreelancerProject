<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/left_drawer"
    android:layout_width="240dp"
    android:layout_height="match_parent"
    android:layout_gravity="start"
    android:background="#ffffff" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true" >

        <RelativeLayout
            android:id="@+id/lin2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@color/white"
            android:orientation="horizontal"
            android:padding="8dp"
            android:visibility="gone" >
        </RelativeLayout>

        <LinearLayout
            android:id="@+id/lin22"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/sa"
            android:orientation="vertical"
            android:padding="18dp" >

            <ImageView
                android:id="@+id/_orddd"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:background="@drawable/userimage" />

            <LinearLayout
                android:id="@+id/lin222"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@android:color/transparent"
                android:orientation="vertical" >

                <TextView
                    android:id="@+id/name"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="bottom"
                    
                    android:layout_marginLeft="5dp"
                    android:text="Rahul Gupta"
                    android:textColor="@color/white"
                    android:textSize="15sp" />

                <TextView
                    android:id="@+id/Logout"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="5dp"
                    android:layout_marginTop="5dp"
                    android:layout_weight="1"
                    android:text="Logout"
                    android:textColor="@color/white"
                    android:textSize="15sp" />
            </LinearLayout>
        </LinearLayout>

         <ScrollView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:fadingEdge="none"
                android:fillViewport="true"
                android:layout_below="@+id/lin22"
                android:scrollbars="none" >

                <LinearLayout
                    android:id="@+id/ldssd"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fadingEdge="none"
                    android:orientation="vertical" >

        <LinearLayout
            android:id="@+id/lin23"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
               android:padding="8dp" 
            android:layout_marginTop="20dp"
            android:background="@android:color/transparent"
            android:orientation="horizontal" >
  <ImageView
                android:id="@+id/home"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:background="@null"
                android:contentDescription="@drawable/slidinghome"
                android:src="@drawable/slidinghome" />
  
  <ImageView
                android:id="@+id/postproject"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="1"
                 android:background="@null"
                android:contentDescription="@drawable/slidingpostproject"
                android:src="@drawable/slidingpostproject" />
  
           <ImageView
                android:id="@+id/getproject"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="1"
                 android:background="@null"
                android:contentDescription="@drawable/slidinggetproject"
                android:src="@drawable/slidinggetproject" />
        </LinearLayout>

       
       <LinearLayout
            android:id="@+id/lin2658"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/lin23"
            android:layout_marginTop="10dp"
            android:background="@android:color/transparent"
            android:orientation="horizontal"
            android:padding="8dp" >

            <TextView
                android:id="@+id/naamdfdxsae"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="@dimen/layout_marginLeft"
                android:gravity="center_vertical"
                android:text="View Posted Projects"
                android:textColor="@color/addanyprojectsecond"
                android:textSize="15sp" />
        </LinearLayout>
        
       
       <LinearLayout
            android:id="@+id/lin2638"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/lin2658"
            android:layout_marginTop="10dp"
            android:background="@android:color/transparent"
            android:orientation="horizontal"
            android:padding="8dp" >

            <TextView
                android:id="@+id/naamdfdxsae"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="@dimen/layout_marginLeft"
                android:gravity="center_vertical"
                android:text="All Purchased Projects"
                android:textColor="@color/addanyprojectsecond"
                android:textSize="15sp" />
        </LinearLayout>
       
         <LinearLayout
            android:id="@+id/lin2652"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/lin2638"
            android:layout_marginTop="10dp"
            android:background="@android:color/transparent"
            android:orientation="horizontal"
            android:padding="8dp" >

            <TextView
                android:id="@+id/naamdfdxsae"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="@dimen/layout_marginLeft"
                android:gravity="center_vertical"
                android:text="Transactional Histroy"
                android:textColor="@color/addanyprojectsecond"
                android:textSize="15sp" />
        </LinearLayout>
         <LinearLayout
            android:id="@+id/lin27"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/lin2652"
            android:layout_marginTop="10dp"
            android:background="@android:color/transparent"
            android:orientation="horizontal"
            android:padding="8dp" >

            <TextView
                android:id="@+id/naamxsae"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="@dimen/layout_marginLeft"
                android:gravity="center_vertical"
                android:text="Services"
                android:textColor="@color/addanyprojectsecond"
                android:textSize="15sp" />
        </LinearLayout>
         <LinearLayout
            android:id="@+id/lin265"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/lin27"
            android:layout_marginTop="10dp"
            android:background="@android:color/transparent"
            android:orientation="horizontal"
            android:padding="8dp" >

            <TextView
                android:id="@+id/naamdfdssfxsae"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
