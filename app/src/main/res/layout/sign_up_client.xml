<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white" >

   
        
         <RelativeLayout
                    android:id="@+id/first"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:padding="8dp"
         >

        <ImageView
            android:id="@+id/back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:background="@drawable/backblue"
            android:contentDescription="@drawable/backblue" />

        
         <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:background="@drawable/dashboardlogo"
            android:contentDescription="@drawable/dashboardlogo" />
     
            
            <ImageView
                android:id="@+id/setting"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:background="@null"
            android:src="@drawable/settingblue"
            android:contentDescription="@drawable/settingblue" />
            
       </RelativeLayout>
 <RelativeLayout
  android:id="@+id/firstss"
        android:layout_width="match_parent"
        android:layout_height="0.1dp"
              android:layout_below="@+id/first"
        android:background="#5CC3EA">
       
    </RelativeLayout>

    <LinearLayout
        android:id="@+id/firsts"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/firstss"
        android:layout_marginBottom="60dp"
        android:background="@color/white"
        android:orientation="vertical" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            android:layout_marginTop="30dp"
            android:layout_marginBottom="10dp"
            
            android:background="#5CC3EA"
            android:orientation="vertical" >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#5CC3EA"
                
                android:orientation="horizontal" >

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="0.1dp"
                    android:layout_marginRight="0.1dp"
                    android:layout_weight="1"
                     
                    android:background="#ffffff"
                   
                    android:gravity="center"
                    android:orientation="vertical" >

                    <TextView
                        android:id="@+id/skidfddp"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:padding="10dp"
                        android:text="   Post a Project     "
                        android:textColor="@color/black"
                        android:textSize="13sp" />

                    <TextView
                        android:id="@+id/skiddffddp"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:text="00"
                        android:padding="10dp"
                        android:layout_marginTop="8dp"
                        android:textColor="@color/black"
                        android:textSize="13sp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight=".9"
                    android:background="@color/white"
                    android:gravity="center"
           
                    android:orientation="vertical" >

                    <TextView
                        android:id="@+id/skidfdsdfgdp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:text="Approved Project"
                                  android:padding="10dp"
                        android:textColor="@color/black"
                        android:textSize="13sp" />

                    <TextView
                        android:id="@+id/skidfdvnadp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:text="00"
                          android:layout_marginTop="8dp"
                                    android:padding="10dp"
                        android:textColor="@color/black"
                        android:textSize="13sp" />
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#5CC3EA"
                android:orientation="horizontal" >

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="0.1dp"
                    android:layout_weight="1"
                    android:background="#ffffff"
                    android:gravity="center"
                    
                    android:orientation="vertical" >

                    <TextView
                        android:id="@+id/skidfghddp"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:padding="10dp"
                        android:text="Project Completed"
                        android:textColor="@color/black"
                        android:textSize="13sp" />

                    <TextView
                        android:id="@+id/skiddfgffddp"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:text="00"
                        android:padding="10dp"
                          android:layout_marginTop="8dp"
                        android:textColor="@color/black"
                        android:textSize="13sp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@color/white"
                    android:gravity="center"
               
                    android:orientation="vertical" >

                    <TextView
                        android:id="@+id/skidfdgfgdp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                             android:padding="10dp"
                        android:text="Hire Freelancers  "
                        android:textColor="@color/black"
                        android:textSize="13sp" />

                    <TextView
                        android:id="@+id/skidfdgadp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:text="00"
                             android:padding="10dp"
                          android:layout_marginTop="8dp"
                        android:textColor="@color/black"
                        android:textSize="13sp" />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
        
        
        
        
        
        
        
        <com.addanyprojects.PulsatorLayout
        android:id="@+id/pulsator"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:pulse_count="3"
        app:pulse_duration="12000"
        app:pulse_repeat="0"
        app:pulse_color="@color/colorAccent"
        app:pulse_startFromScratch="false"
        app:pulse_interpolator="Decelerate">

        <ImageView
            android:id="@+id/post"
            android:layout_width="160dp"
            android:layout_height="160dp"
            android:layout_centerInParent="true"
            android:src="@drawable/q"
            android:contentDescription="@drawable/q"/>

    </com.addanyprojects.PulsatorLayout>
        
        
   <!--      
        <ImageView
            android:id="@+id/post"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:background="@drawable/q"
                    android:layout_marginTop="20dp"
                    android:contentDescription="@drawable/q" /> -->
    </LinearLayout>

  <include
        android:id="@+id/footer"
   android:layout_width="fill_parent"
   android:layout_height="wrap_content"
     android:layout_alignParentBottom="true"
   layout="@layout/bottomlayout" />
</RelativeLayout>