<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white" >

    <RelativeLayout
        android:id="@+id/first"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/addanyprojectsecond"
        android:padding="15dp" >

        <ImageView
            android:id="@+id/back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:background="@drawable/back" />

        <TextView
            android:id="@+id/sddkip"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="40dp"
            android:text="Post Your Project"
            android:textColor="@color/white"
            android:textSize="15sp" >
        </TextView>
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/first"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:gravity="center"
        android:orientation="vertical" >

        <ScrollView
            android:id="@+id/ss"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fadingEdge="none"
            android:fillViewport="true"
            android:scrollbars="none" >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical" >

                <android.support.design.widget.TextInputLayout
                    android:id="@+id/fullname"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                     >

                    <Spinner
                        android:id="@+id/category"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/layout_marginTop"
                        android:spinnerMode="dropdown" >
                    </Spinner>
                </android.support.design.widget.TextInputLayout>

                <android.support.design.widget.TextInputLayout
                    android:id="@+id/mobile"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/fullname" 
                    android:layout_marginTop="5dp">

                    <EditText
                        android:id="@+id/mobidfsgle"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Sub Category"
                        android:inputType="text"
                        android:textColor="#000000"
                        android:textColorHint="#000000" />
                </android.support.design.widget.TextInputLayout>

                <android.support.design.widget.TextInputLayout
                    android:id="@+id/email"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/mobile"
                    android:layout_marginTop="5dp" >

                    <EditText
                        android:id="@+id/dfd"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Title Of The Project"
                        android:inputType="text"
                        android:textColor="#000000"
                        android:textColorHint="#000000" />
                </android.support.design.widget.TextInputLayout>

                <android.support.design.widget.TextInputLayout
                    android:id="@+id/company"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/email"
                    android:layout_marginTop="5dp" >

                    <EditText
                        android:id="@+id/dfcsdd"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Project Description"
                        android:inputType="text"
                        android:textColor="#000000"
                        android:textColorHint="#000000" />
                </android.support.design.widget.TextInputLayout>

                <android.support.design.widget.TextInputLayout
                    android:id="@+id/compdsdsany"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/company"
                    android:layout_marginTop="15dp" >

                    <Spinner
                        android:id="@+id/providers"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/layout_marginTop"
                        android:spinnerMode="dropdown" />
                </android.support.design.widget.TextInputLayout>

                <android.support.design.widget.TextInputLayout
                    android:id="@+id/compdssdsdsany"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/compdsdsany"
                    android:layout_marginTop="5dp" >

                    <EditText
                        android:id="@+id/fsssdgfd"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Budget"
                        android:inputType="text"
                        android:textColor="#000000"
                        android:textColorHint="#000000" />
                </android.support.design.widget.TextInputLayout>

                <!--
            <Spinner
                android:id="@+id/country"
                android:layout_width="match_parent"
                android:layout_height="47dp"
                android:layout_marginTop="@dimen/layout_marginTop"
                android:background="@drawable/spinner_background"
                
                android:spinnerMode="dropdown" >
            </Spinner>

            <Spinner
                android:id="@+id/state"
                android:layout_width="match_parent"
                android:layout_height="47dp"
                android:layout_marginTop="@dimen/layout_marginTop"
                android:background="@drawable/spinner_background"
                android:spinnerMode="dropdown" >
            </Spinner>

            <Spinner
                android:id="@+id/city"
                android:layout_width="match_parent"
                android:layout_height="47dp"
                android:layout_marginTop="@dimen/layout_marginTop"
                android:background="@drawable/spinner_background"
                android:spinnerMode="dropdown" >
            </Spinner>


                -->

                <Button
                    android:id="@+id/btndLogin"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/compdssdsdsany"
                    android:layout_marginBottom="5dp"
                    android:layout_marginTop="15dp"
                    android:background="@drawable/button_border"
                    android:padding="3dp"
                    android:text="Post A Project"
                    android:textColor="@color/white"
                    android:textSize="18sp" />
            </LinearLayout>
        </ScrollView>
    </LinearLayout>

    <include
        android:id="@+id/footer"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        layout="@layout/bottomlayout" />

</RelativeLayout>